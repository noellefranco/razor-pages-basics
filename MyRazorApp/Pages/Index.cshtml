@page
@model IndexModel

<!DOCTYPE html> 

<html>
    <head>
        <title></title>
    </head>
    <body>
        <div>
        <partial name="Shared/NavMenuPartial" />
            <h1>Categories</h1>
            <table>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Title</td>
                        <td>Price</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                      <tr>
                         <td>@category.Id</td>
                          <td>@category.Title</td>
                          <td>@category.Price.ToString(format:"C", provider: new CultureInfo("en-US"))</td>
                      </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</html>